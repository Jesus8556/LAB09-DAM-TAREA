<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.UsoWidgetsTarea.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.UsoWidgetsTarea.AppWidgetContainer">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="395dp"
        android:layout_height="245dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/lblhora"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignBottom="@+id/lblciudad"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/lblciudad"
        android:gravity="center"
        android:text="00:00"
        android:textColor="#F1E6E6"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/lbldiafecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:background="#A1000000"
        android:gravity="center"
        android:textColor="#EDEBEB"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/lblciudad"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:text="Ciudad"
        android:textColor="#F6F3F3"
        android:textSize="34sp" />

</RelativeLayout>